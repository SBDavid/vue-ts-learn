{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "jsx": "preserve"
  },
  "vueCompilerOptions": {
    "experimentalSuppressInvalidJsxElementTypeErrors": true
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
